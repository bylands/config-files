alias l 'exa'
alias ll 'exa --group-directories-first --long --group --header --time-style=iso --git'
alias la 'exa --group-directories-first --long --group --header --time-style=iso --all --git'
alias ldir 'exa ---group-directories-first -long --group --header --time-style=iso --only-dirs --git'
alias lt 'exa --tree --level'
alias ldot 'exa -d .*'
